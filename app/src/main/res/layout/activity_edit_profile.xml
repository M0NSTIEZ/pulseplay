<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/age_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbutton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Illustration Image -->
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:src="@drawable/updateprofile"
        android:scaleType="fitCenter"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letâ€™s update your profile"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/illustration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It will help us to know more about you!"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/username_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:orientation="horizontal"
        android:padding="12dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@null"
            android:paddingStart="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bio_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/username_profile"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:orientation="horizontal"
        android:padding="12dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/add"
            app:tint="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Bio"
            android:background="@null"
            android:paddingStart="8dp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/height_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/bio_profile"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:orientation="horizontal"
        android:padding="12dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/swap"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Height"
            android:background="@null"
            android:paddingStart="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/weight_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/height_profile"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:orientation="horizontal"
        android:padding="12dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/scale"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Weight"
            android:background="@null"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/age_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/weight_profile"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        android:orientation="horizontal"
        android:padding="12dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/calendar"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Age"
            android:background="@null"
            android:paddingStart="8dp"/>
    </LinearLayout>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"
            android:layout_below="@id/age_profile"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"/>
    </RelativeLayout>



