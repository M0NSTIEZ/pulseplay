<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.TotalSteps">
    <!-- Title -->
    <TextView
        android:id="@+id/steps_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps Count"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/steps_bar_chart"
        android:layout_below="@+id/steps_count"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_below="@+id/steps_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="20dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘Ÿ Total Steps"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily step count is a key indicator of physical activity:\n\nâ€¢ Sedentary: &lt;5,000 steps\nâ€¢ Low Active: 5,000-7,499\nâ€¢ Somewhat Active: 7,500-9,999\nâ€¢ Active: 10,000+\nâ€¢ Highly Active: 12,500+\n\nBenefits of reaching daily step goals:\nâ€¢ Improves cardiovascular health\nâ€¢ Strengthens bones and muscles\nâ€¢ Helps maintain healthy weight\nâ€¢ Boosts mood and energy levels\nâ€¢ Reduces risk of chronic diseases"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>