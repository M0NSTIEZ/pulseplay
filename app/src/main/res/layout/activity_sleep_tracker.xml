<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SleepTracker">

    <!-- Back Button -->
    <ImageButton
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/st_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backbutton"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <!-- More Options Button -->
    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/sleepmore_options"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/detail"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep Tracker"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"/>

    <com.github.mikephil.charting.charts.BarChart
        android:layout_below="@+id/title"
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"/>

    <!-- Gradient Background Container -->
    <LinearLayout
        android:layout_below="@+id/bar_chart"
        android:id="@+id/sleep_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bluetooth_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/bar_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp">

        <!-- Set Daily Calorie Burn Text -->
        <TextView
            android:id="@+id/sleep_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Daily Sleep Schedule"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <!-- Check Button -->
        <Button
            android:id="@+id/sleepcheck_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Check"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#6B50F6"
            android:layout_gravity="center_vertical"
            android:shape="rectangle"
            />
    </LinearLayout>

    <!-- Sleep Education Content (ScrollView) -->

    <ScrollView
        android:layout_below="@+id/sleep_container"
        android:id="@+id/sleep_info_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/sleep_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="20dp"
            android:background="@android:color/white">

            <!-- ðŸ’¤ What Is Sleep? -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¤ What Is Sleep?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleep is a natural and essential state of rest for the body and mind. During sleep, your body becomes less responsive to the outside world, and your brain goes through different cycles that help restore physical and mental health."
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ§  Why Do We Sleep? -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§  Why Do We Sleep?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleep allows the body to:\nâ€¢ Repair muscles and tissues\nâ€¢ Boost immune function\nâ€¢ Process and store memories\nâ€¢ Regulate emotions\nâ€¢ Maintain brain function and learning ability\n\nWithout enough sleep, people may experience poor concentration, weakened immunity, and increased risk of chronic diseases."
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- ðŸŒ€ Stages of Sleep -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ€ Stages of Sleep"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleep occurs in repeating cycles made of four main stages:\n\nâ€¢ Stage 1 (Light Sleep) â€“ Transition between wakefulness and sleep\nâ€¢ Stage 2 (Light Sleep) â€“ Heart rate slows, body temperature drops\nâ€¢ Stage 3 (Deep Sleep) â€“ Physical restoration, cell repair\nâ€¢ REM Sleep (Rapid Eye Movement) â€“ Dreaming occurs, brain is active, helps with memory and learning\n\nEach cycle lasts about 90 minutes and repeats several times per night."
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- â° How Much Sleep Do You Need? -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â° How Much Sleep Do You Need?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Newborns: 14â€“17 hours\nâ€¢ Children (6â€“13 years): 9â€“11 hours\nâ€¢ Teens: 8â€“10 hours\nâ€¢ Adults: 7â€“9 hours\nâ€¢ Older adults: 7â€“8 hours"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- ðŸŒ™ Benefits of Good Sleep -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™ Benefits of Good Sleep"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Improves memory and learning\nâ€¢ Enhances mood and emotional health\nâ€¢ Boosts creativity and problem-solving\nâ€¢ Reduces risk of heart disease and diabetes\nâ€¢ Helps with weight management"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>




</RelativeLayout>