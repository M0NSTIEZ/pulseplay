<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- User greeting -->
    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi,"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butch Sykes"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/greeting"
        android:layout_marginStart="20dp"/>

    <!-- Notification Icon -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/notify"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@id/user_name"/>

    <!-- BMI Card -->
    <RelativeLayout
        android:id="@+id/bmi_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/user_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bmi_backround"
        android:padding="20dp">

        <!-- BMI Title -->
        <TextView
            android:id="@+id/bmi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI (Body Mass Index)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <!-- BMI Description -->
        <TextView
            android:id="@+id/bmi_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have a normal weight"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_below="@id/bmi_title"
            android:layout_marginTop="5dp"/>

        <!-- View More Button -->
        <Button
            android:id="@+id/btn_view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View More"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!-- Connect via Bluetooth Section -->
    <RelativeLayout
        android:id="@+id/bluetooth_card"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@id/bmi_card"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bluetooth_background"
        android:padding="20dp">

        <!-- Bluetooth Text -->
        <TextView
            android:id="@+id/bluetooth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect via Bluetooth"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Check Button -->
        <Button
            android:id="@+id/btn_check_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


</RelativeLayout>
